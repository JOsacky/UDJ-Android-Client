<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:paddingTop="1dp"
  android:paddingBottom="1dp"
  android:paddingLeft="4dp"
  android:paddingRight="4dp"
>

  <TextView
    android:id="@+id/playlistSongName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textStyle="bold"
    android:scrollHorizontally="true"
    android:lines="1"
    android:ellipsize="marquee"
    gravity="left"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/downvote_button"
  />

  <TextView
    android:id="@+id/playlistArtistName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_below="@id/playlistSongName"
    android:paddingLeft="4dp"
    android:scrollHorizontally="true"
    android:lines="1"
    android:ellipsize="marquee"
    gravity="left"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@id/downvote_button"
  />

  <TextView
    android:id="@+id/playlistAddedBy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:layout_below="@id/playlistArtistName"
    android:paddingLeft="4dp"
    android:scrollHorizontally="true"
    android:lines="1"
    android:ellipsize="marquee"
    gravity="left"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@id/downvote_button"
  />

  <ImageButton
    android:id="@id/downvote_button"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:minHeight="40dp"
    android:minWidth="40dp"
    android:src="@drawable/downarrow"
    android:layout_toLeftOf="@+id/upvote_button"
  />
  <ImageButton
    android:id="@id/upvote_button"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:minHeight="40dp"
    android:minWidth="40dp"
    android:src="@drawable/uparrow"
    android:layout_alignParentRight="true"
  />

</RelativeLayout>
